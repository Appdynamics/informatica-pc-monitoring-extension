<monitor>
    <name>InformaticaPowerCenter</name>
    <type>managed</type>
    <description>Monitors InformaticaPowerCenter</description>
    <monitor-configuration>
    </monitor-configuration>
    <monitor-run-task>
        <execution-style>periodic</execution-style>
        <execution-frequency-in-seconds>60</execution-frequency-in-seconds>
        <name>InformaticaPowerCenter Monitor Run Task</name>
        <display-name>InformaticaPowerCenter Monitor Task</display-name>
        <description>InformaticaPowerCenter Monitor Task</description>
        <type>java</type>
        <execution-timeout-in-secs>60</execution-timeout-in-secs>
        <task-arguments>
            <!-- config file-->
            <argument name="config-file" is-required="true" default-value="monitors/IPMonitor/config.yml" />
            <argument name="metric-file" is-required="true" default-value="monitors/IPMonitor/metrics.xml" />
        </task-arguments>
        <java-task>
            <classpath>informatica-powercenter-monitoring-extension.jar</classpath>
            <impl-class>com.appdynamics.monitors.informatica.IPMonitor</impl-class>
        </java-task>
    </monitor-run-task>
</monitor>
